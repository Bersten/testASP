@model EcoMvc.Models.Book
<link rel="stylesheet" href="/css/Product.css">

<header>
    Produits - Fierté Française
</header>

<h1>Ajouter un Livre</h1>

<form asp-action="AddBook" method="post">
    <div>
        <label for="Title">Titre :</label>
        <input type="text" id="Title" asp-for="Title" name="Title" required />
    </div>
    <div>
        <label for="TomeNumber">Numéro de Tome :</label>
        <input type="number" id="TomeNumber" asp-for="TomeNumber" name="TomeNumber" required />
    </div>
    <button type="submit">Ajouter</button>
</form>

<a asp-action="BookList">Annuler</a>