@model IEnumerable<EcoMvc.Models.Product>
<link rel="stylesheet" href="/css/Product.css">

<header>
    Produits - Fierté Française
</header>
<h1>Liste des produits</h1>
<table>
    <thead>
        <tr>
            <th>Nom</th>
            <th>Prix</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price €</td>
                <td>
                    <a asp-action="ProductDetail" asp-route-id="@product.Id">Voir Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>